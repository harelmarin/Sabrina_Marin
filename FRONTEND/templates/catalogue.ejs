<!DOCTYPE html>
<html lang="fr">

<head>
    <title>Catalogue</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../assets/css/catalogue.css">
    <link rel="stylesheet" href="../assets/css/global.css">

</head>
    
<header class="header">
    <a class="title" href="/backend/home">
        <h1>wethefoot</h1>
    </a>
    <form action="/backend/search" method="GET">
        <input type="text" name="search" id="search" placeholder="Search for a team, a brand..." autocomplete="off">
    </form>
    <nav class="Fav-Panier">
        <a href="/backend/catalogue">Catalogue</a>
        <a href="/backend/favoris"><img src="../assets/img/contour-en-forme-de-coeur.png"></a>
        <a href="/backend/panier"><img src="../assets/img/sac-de-courses.png"></a>
    </nav>
</header>


<body>
    <section class="container-catalogue">
        <h2> Tous nos Maillots </h2>
        <!--
        <div class="container-marque">
            <div class="marque">
                <img src="../assets/img/adidas.png"> <p>Adidas</p>
            </div>
            <div class="marque">
                <img src="../assets/img/nike.png"> <p>Nike</p>
            </div>
            <div class="marque">
                <img src="../assets/img/puma.png"> <p>Puma</p>
            </div>
            <div class="marque">
                <p class="other"> Autres marques </p>
            </div>
        </div>
        -->
       
        <div class="container-filter">
            <p> Filtre </p> 
            <div class="container-filter-content">
                <form action="/backend/catalogue">
                <select name="gender" id="gender">
                    <p>Genre</p>
               <option value="">TOUS</option>
                <option value="femme">Femme</option>
                <option value="homme">Homme</option>
            </select>
            
                <select name="type" id="type">Type
                    <option value="">TOUS</option>
                <option value="maillot">Maillot</option>
                <option value="short">Short</option>
            </select>
                
                <input type="submit" value="Filtrer">
                </form>
            </div>
        </div>
        <div class="container-produits">
            <% if (produits.length===0){ %>
                <h2>Aucun produit correspondant au filtre n'a été trouvé.</h2>
                <% } else { %>
                    <% produits.forEach(produit=> { %>
                        <div class="produits">
                            <% const imagesPaths = produit.images_paths; %>
                            <a href="/backend/produit/<%= produit.idProduct %>">
                                <img src="<%= imagesPaths[0] %>" alt="Image du produit">
                            </a>
                                <div class="coeur likediv"></div>
                                <h3>
                                    <%= produit.name %>
                                </h3>
                                <h4>
                                    <%= produit.gender %>
                                </h4>
                                <h5> Prix: <%= produit.price %>
                                        <%= produit.devise %>
                                </h5>
                        </div>
                        <% }); %>
                            <% }; %>
        </div>

        <section class="pagination-container">
            <div class="pagination">
                <% if (typeof currentPage !== 'undefined' && currentPage > 1) { %>
                    <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>">
                        <img src="../assets/img/fleche-gauche.png" alt="fleche-gauche">
                    </a>
                <% } %>
            
                <!-- <% if (typeof totalPages !== 'undefined') { %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <a href="?page=<%= i %>&limit=<%= limit %>"
                           class="<%= currentPage === i ? 'active' : '' %>">
                            <%= i %>
                        </a>
                    <% } %>
                <% } %> -->
            
                <% if (typeof currentPage !== 'undefined' && typeof totalPages !== 'undefined' && currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>">
                        <img src="../assets/img/fleche-droite.png" alt="fleche-droite">
                    </a>
                <% } %>
            </div>            
        </section>
        
    </section>


    <footer>
        <div class="nav-footer">
            <a href="/backend/mentions"> CONTACT </a>
            <a href="/backend/mentions"> MENTIONS LEGALES </a>
        </div>
    </footer>

</body>

</html>